<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/tvBenefitType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/tvMinClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextBody"/>

        <TextView
            android:id="@+id/tvMinDiplomaLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextBody"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvConfirmationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Предметы, которые нужно подтвердить"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/confirmationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:divider="@drawable/divider"
        android:showDividers="middle"/>

    <TextView
        android:id="@+id/tvFullScoreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Предметы с льготой"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/fullScoreLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:divider="@drawable/divider"
        android:showDividers="middle"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="16dp"/>

</LinearLayout>